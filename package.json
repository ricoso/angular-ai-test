{
  "name": "angular-21-project",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:ghpages": "ng build --base-href /angular-ai-test/",
    "watch": "ng build --watch",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,html,scss}\"",
    "mcp:setup": "npm install && cd mcp/ngrx-signalstore && npm install && cd ../angular-material && npm install",
    "mcp:check": "echo '✓ @angular/cli MCP (offiziell via npx)' && echo '✓ ngrx-signalstore MCP (lokal)' && echo '✓ angular-material MCP (lokal)'",
    "feature:create": "bash scripts/create-feature.sh",
    "component:create": "bash scripts/create-component.sh",
    "requirement:create": "bash scripts/create-requirement.sh",
    "help": "cat COMMANDS.md"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.0",
    "@angular/cdk": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/material": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@ngrx/signals": "^21.0.1",
    "@ngx-translate/core": "^16.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.8.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@eslint/js": "^9.0.0",
    "@types/jest": "^30.0.0",
    "angular-eslint": "^19.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-preset-angular": "^16.0.0",
    "prettier": "^3.4.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.0.0"
  }
}
